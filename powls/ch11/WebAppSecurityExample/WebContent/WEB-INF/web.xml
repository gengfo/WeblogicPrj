<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>WebAppSecurityExample</display-name>
  <servlet>
  	<servlet-name>RunAsServlet</servlet-name>
  	<servlet-class>professional.weblogic.ch11.examples.server.servlet.webappsecurity.RunAsServlet</servlet-class>
  	<run-as>
  		<role-name>ProtectedAdminRole</role-name>
  	</run-as>
  </servlet>
  <servlet>
  	<servlet-name>EJBClientServlet</servlet-name>
  	<servlet-class>professional.weblogic.ch11.examples.server.servlet.webappsecurity.EJBClientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RunAsServlet</servlet-name>
  	<url-pattern>/protected/runas</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  	<servlet-name>EJBClientServlet</servlet-name>
  	<url-pattern>/protected/ejbclient</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <security-constraint>
  	<display-name>All Resources Over SSL</display-name>
  	<web-resource-collection>
  		<web-resource-name>All Resources</web-resource-name>
  		<url-pattern>/confidential/*</url-pattern>
  	</web-resource-collection>
  	<user-data-constraint>
  		<transport-guarantee>CONFIDENTIAL</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>
  
    
  <security-constraint>
  	<display-name>Protected Resources Require Authentication</display-name>
  	<web-resource-collection>
  		<web-resource-name>Protected Resources</web-resource-name>
  		<url-pattern>/protected/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<description>Protected Resources Allowed for Users</description>
  		<role-name>AllUsers</role-name>
  	</auth-constraint>
  </security-constraint>
  
   <security-constraint>
  	<display-name>Special Resources Require Special Role</display-name>
  	<web-resource-collection>
  		<web-resource-name>Protected Resources</web-resource-name>
  		<url-pattern>/protected/special/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<description>Protected Resources Allowed for Special</description>
  		<role-name>SpecialRole</role-name>
  	</auth-constraint>
  </security-constraint>
  
  <security-role>
  	<description>Allowed to access protected resources</description>
  	<role-name>AllUsers</role-name>
  </security-role>
  <security-role>
  	<description>Allowed to access special resources</description>
  	<role-name>SpecialRole</role-name>
  </security-role>
  <security-role>
  	<description>Allowed to access special resources</description>
  	<role-name>ProtectedAdminRole</role-name>
  </security-role>
  
  <ejb-ref>
  	<ejb-ref-name>example</ejb-ref-name>
  </ejb-ref>
  
</web-app>