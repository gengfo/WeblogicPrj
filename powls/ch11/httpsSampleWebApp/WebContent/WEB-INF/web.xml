<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>httpsSampleWebApp</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <login-config>
  	<auth-method>CLIENT_CERT</auth-method>
  </login-config>
  
  <security-constraint>
  	<display-name>All Resources Over SSL</display-name>
  	<web-resource-collection>
  		<web-resource-name>All Resources</web-resource-name>
  		<url-pattern>*</url-pattern>
  	</web-resource-collection>
  	<user-data-constraint>
  		<transport-guarantee>CONFIDENTIAL</transport-guarantee>
  	</user-data-constraint>
  </security-constraint>
  
  <security-constraint>
  	<display-name>Protected Resources Require Authentication</display-name>
  	<web-resource-collection>
  		<web-resource-name>Protected Resources</web-resource-name>
  		<url-pattern>/protected/*</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<description>Protected Resources Allowed for Role Role01</description>
  		<role-name>Role01</role-name>
  	</auth-constraint>
  </security-constraint>
  
  <security-role>
  	<description>Allowed to access protected resources</description>
  	<role-name>Role01</role-name>
  </security-role>
</web-app>