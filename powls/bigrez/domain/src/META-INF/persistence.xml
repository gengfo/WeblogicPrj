<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name="BigRezDomain" transaction-type="JTA">
    <!-- Uncomment to enable TopLink. You will also need to change the build file
         not to run the Kodo enhancer, and modify the Reservation class to not use
         @GeneratedValue to generate the confirmation number.
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    -->
    <jta-data-source>bigrez.datasource.jta</jta-data-source>
    <non-jta-data-source>bigrez.datasource.nonjta</non-jta-data-source>
  </persistence-unit>
</persistence>
